{{#if session}}
<div class="row">
    <div class="col">
        <h3>{{nombre}}</h3>
        <form action="/salir" method="get">
            <button class="btn btn-primary" type="submit">Salir</button>
        </form>
    </div>
</div>
{{else}}
<div class="row">
    <div class="col">
        <form class="form-inline" action="/identificarse" method="POST">
            <div class="form-group mb-2">
                <label for="nombre" class="sr-only">Nombre</label>
                <input type="text" class="form-control" id="nombre" name="nombre">
            </div>
            <div class="form-group mx-sm-3 mb-2">
                <label for="contrasena" class="sr-only">Contrase√±a</label>
                <input type="password" class="form-control" id="contrasena" name="contrasena">
            </div>
            <button type="submit" class="btn btn-primary mb-2">Confirmar identidad</button>
        </form>
    </div>
</div>
{{/if}}